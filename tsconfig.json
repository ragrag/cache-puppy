{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable", "es2020"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2017"
  },
  "compileOnSave": true,
  "include": ["src"]
}
